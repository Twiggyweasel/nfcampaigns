            <h3 class=""style="font-family: 'Boogaloo', cursive;">Our Goal</h3>
            <h2 class=''>$100,000.00</h2>
            <%= link_to "Contribute Today", contribution_select_path, class: 'btn btn-warning mt-3 px-5' %>
          </div>
        </div>
      </div>
    </div>  
  </div>
</div>


<div class='row my-5' style=''>
  <div class='container'>
    <div class='row px-3' style=''>
      <div class='col-lg-4 col-md-6 py-5 px-4 w' style='background-color: #015f88;'>
        <h3>Upcoming Events</h3>
        <p> #NF Strong events happen through out the country, find one near you!</p>
        <%= link_to 'All Events', events_path, class: "btn btn-outline-secondary" %>
      </div>
      <% @events.each do |event| %>
      <div class='col-lg-4 col-md-6 event-card' style='background-image: url(<%= event.event_card.url %>);'>
        <div class='date-overlay py-3 px-4 text-center'>
          <%= event.event_date.strftime("%b") %><h4><%= event.event_date.strftime("%d") %></h4>
        </div>
            <div class='title-overlay px-3 py-2'>
              <%= link_to(event_path(event)) do %>
                <h4><%= event.city %>, <%= event.state %> - <%= event.name %></h4>
                <h4><%= event.event_type %></h4>
              <% end %>
            </div>
      </div>
      <% end %>
    </div>
  </div>
</div>


