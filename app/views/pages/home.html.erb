      <li class='nav-item'><a class='nav-link' href='https://plus.google.com/share?url=<%= request.original_url %>'  target="_blank"><i class='fa fa-google-plus-square fa-3x social-icon' style='color:#dd4b39;'></i></a></li>
      <!--<li class='nav-item'><a class='nav-link' href='https://www.reddit.com/r/Charity/submit?title=Checkout%20the%20event:&url=<%= request.original_url %>' target="_blank"><i class='fa fa-reddit-square fa-3x social-icon' style='color:#FF5700;'></i></a></li>-->
    </ul>
    </div>
  </div>

  <div class='row mt-5 mx-1 px-2' style=''>
    <div class='col-12'>
      <div class='card card-block'>
        <div class='row'>
          <div class='col-md-6 mt-3'>
            <img class='img-fluid rounded d-block mx-auto' src='<%= image_url("nfchamp.jpg") %>'>
          </div>
          <div class='col-md-4 offset-md-1 text-center mt-4' style=''>
            <h3 class=""style="font-family: 'Boogaloo', cursive;">Weâ€™re making strong progress</h3>
            <h2 class=""><%= number_to_currency(@total_raised) %></span></h2>
