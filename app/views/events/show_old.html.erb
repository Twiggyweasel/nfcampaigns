<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @event.name %>
</p>

<p>
  <strong>Registration date:</strong>
  <%= @event.registration_date %>
</p>

<p>
  <strong>Event date:</strong>
  <%= @event.event_date %>
</p>

<p>
  <strong>Event:</strong>
  <%= @event.event_start_time %>
</p>

<p>
  <strong>Goal:</strong>
  <%= @event.goal %>
</p>

<p>
  <strong>Raised:</strong>
  <%= @event.raised %>
</p>

<p>
  <strong>Venue name:</strong>
  <%= @event.venue_name %>
</p>

<p>
  <strong>Street:</strong>
  <%= @event.street %>
</p>

<p>
  <strong>City:</strong>
  <%= @event.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @event.state %>
</p>

<p>
  <strong>Zipcode:</strong>
  <%= @event.zipcode %>
</p>

<p>
  <strong>Has shirts:</strong>
  <%= @event.has_shirts %>
</p>

<p>
  <strong>Is private:</strong>
  <%= @event.is_private %>
</p>

<% @event.contributions.each do |contribution| %>

<h2><%= contribution.id %></h2>
<ul>
  <li>Amount: <%= number_to_currency(contribution.amount) %></li>
  <li>Type: <%= contribution.backable_type %></li>
</ul>

<% end %>

<%= link_to 'Edit', edit_event_path(@event) %> |
