      <div class='card card-block'>
        <div class='row'>
          <div class='col-md-6'>
            <%= link_to "Admin View", admin_event_path(@event), class: "btn btn-block btn-primary" %>
          </div>
          <div class='col-md-6'>
            <%= link_to "Edit", edit_admin_event_path(@event), class: "btn btn-block btn-warning" %>
          </div>
        </div>

      </div>
    </div>
  </div>
<% end %>

  <div class='row'>
    <div class='col-12'>
      <%= @event.desc.html_safe %>
    </div>
  </div>

