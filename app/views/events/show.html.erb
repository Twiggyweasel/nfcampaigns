    <%= render 'promocard' %>
  <% end %>





</div>
    </div>
    <div class='row'>
      <div class='col-lg-6 my-5'>
        <div class='card card-block' style='min-height: 395px;'>
          <h2>TOP 5 TEAMS <small class='text-muted float-right'><%= link_to(top_teams_path, class: 'anchor-styled') do %><span>See All</span><% end %></small></h2>
