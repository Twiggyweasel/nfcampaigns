    <div class='row'>
      <div class='col-12'>
        <h3 class='sm-header mb-4'>Event Stats</h3>
        <div class='card card-block'>
          <h4>Raised: <%= number_to_currency(@event.raised) %> <span class='float-right'>Goal: <%= number_to_currency(@event.goal) %></span></h4>
          <div class="progress mt-3">
                              <div class="progress-bar" role="progressbar" aria-valuenow="<%= @event.percent_raised.to_f.ceil %>" aria-valuemin="0" aria-valuemax="100" style='height: 20px; width: <%= @event.percent_raised.to_f.ceil %>%;'></div>
          </div>
          <div class='row mb-2 mt-4 text-center'>
            <div class='col-4'>
              <i class="fa fa-user fa-3x" aria-hidden="true"></i>  
              <h3><%= @event.attendees.count %></h3>
            </div>
            <div class='col-4'>
              <i class="fa fa-users fa-3x" aria-hidden="true"></i>
              <h3><%= @event.teams.count %></h3>
            </div>
            <div class='col-4'>
              <i class="fa fa-gift fa-3x" aria-hidden="true"></i>
                <h3><%= @event.contributions.count %></h3>   
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class='row mb-3'>
      <div class='col-md-6 col-xl-12 mt-3'>
        <h3 class='sm-header mb-4'>Event Resources</h3>
        <!--<div class='card card-block'>-->
          <div class='list-group'>
            <% @event.resources.order(:created_at).each do |resource| %>
              <%= link_to(resource.attachment_url, class: 'list-group-item list-group-item-action') do %> <i class="fa fa-file-<%= resource.attachment.file.extension.downcase %>-o pr-2" aria-hidden="true"></i>   <%= resource.name %> - Download <% end %></li>
            <% end %>
          </div>
        <!--</div>-->
      </div>
      <div class='col-md-6 col-xl-12 mt-3'>
         <h3 class='sm-header mb-4'>Event Location</h3>
        <div class="embed-responsive embed-responsive-16by9">
          <iframe class="embed-responsive-item" src="https://www.google.com/maps/embed/v1/place?key=AIzaSyBkh8FKeW5f8K0ms_1lNh6QGrBBtBpPY_Y&q=<%= @event.street %>,<%= @event.city %>+<%= @event.state %>" frameborder="0" style="border:0" allowfullscreen></iframe>
        </div>         
      </div>
    </div>
  </div>
</div>

