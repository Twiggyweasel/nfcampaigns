<div class='event-banner' style='position: relative; background-image: url(<%= @event.event_cover.url %>); height:450px; background-size: cover;'>
  <div class='row' style='position: absolute; bottom: 5%; left: 15px; width:100%'>
    <div class='col-12 col-md-6 offset-md-3 col-lg-8 offset-lg-2 w pt-2' style='background-color: rgba(38, 49, 59, 0.54); '>
      <h1 class='display-4' style="font-family: 'Changa One', cursive;">#NFStrong - <%= @event.name %></h1>
      <hr style="border-top-color: white; margin-right: 7rem;">
      <p style='font-size: 120%;'>
        <i class="fa fa-calendar" aria-hidden="true" style='width:20px;'></i>  <%= @event.event_date.strftime("%A, %B %d, %Y") %>
        <br>
        <i class="fa fa-clock-o" aria-hidden="true" style='width:20px;'></i>  <%= @event.event_start_time.strftime("%I:%M %p")  %> - <%= @event.event_end_time.strftime("%I:%M %p")  %>
        <br>
        <i class='fa fa-map-marker' aria-hidden="true" style='width:20px;'></i>  <%= @event.venue_name %> - <%= @event.city %>, <%= @event.state %>
      </p>
 
      <div class='row'>
        <div class='col-lg-4'>
          <% if logged_in? %>
          <% if current_user.attendees.empty? || !current_user.attendees.find(@event.id) %>
          <div class="dropdown">
            <a class="btn btn-primary btn-block dropdown-toggle my-3" href="https://example.com" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Register
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <%= link_to 'Single Registation', new_event_attendee_path(@event, :category => "personal"), class: 'dropdown-item' %>
              <%= link_to 'Corporate Registation', new_event_attendee_path(@event, :category => 'corporate'), class: 'dropdown-item' %>
              <%= link_to 'Team Registation', new_event_team_path(@event), class: 'dropdown-item' %>
            </div>
          </div>  
          <% else %>
          <%= link_to 'Manage Registration', event_attendee_path(@event, current_user.attendees.where(event_id: @event.id).first.id), class: 'btn btn-primary btn-block mt-3 mb-6' %>
          <% end %>
          <% else %>
              <div class="dropdown">
            <a class="btn btn-primary btn-block dropdown-toggle my-3" href="https://example.com" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              Register
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
              <%= link_to 'Single Registation', new_event_attendee_path(@event, :category => "personal"), class: 'dropdown-item' %>
              <%= link_to 'Corporate Registation', new_event_attendee_path(@event, :category => 'corporate'), class: 'dropdown-item' %>
              <%= link_to 'Team Registation', new_event_team_path(@event), class: 'dropdown-item' %>
            </div>
          </div>  
          <% end %>
        </div>
        <div class='col-lg-3'>
          <%= link_to 'Donate', new_event_contribution_path(@event), class: 'btn btn-success btn-block mt-3 mb-5' %>
        </div>
      </div>
    </div>
  </div>
</div>


