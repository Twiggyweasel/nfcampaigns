<div class='row my-2'>
  <div class='col-12'>
    <%= link_to(admin_event_path(@event), class: 'btn btn-success') do %><i class="fa fa-arrow-left" aria-hidden="true"></i> Return To Event <% end %>
  </div>
</div>
<%= render 'shared/title', title: "Donations for #{@event.name}", display: 4 %>

<div class='row mb-3'>
  <div class='col-12'>
    <div class='card card-block'>
      <h3>Create Offline Donation</h3>
      <p>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseEvent" aria-expanded="false" aria-controls="collapseEvent">
          Apply Donation to Event
        </a>
        <a class="btn btn-primary" data-toggle="collapse" href="#collapseAttendee" aria-expanded="false" aria-controls="collapseAttendee">
          Apply Donation to Attendee
        </a>
      </p>
      <div class="collapse" id="collapseEvent">
        <%= render 'admin/contributions/new_event_donation', event: @event %>
      </div>
        <!--<#%= render 'admin/contributions/new', event: @event %>-->
      <div class="collapse" id="collapseAttendee">
        <%= render 'admin/contributions/new_attendee_donation', event: @event %>
      </div>
    </div>
  </div>
</div>


<div class='row'>
  <div class='col-12'>
    <div class="card card-block">

      <table id="contributions" class='table table-striped'>
        <thead>
          <tr>
            <th>Donation ID</th>
            <th>User's Name</th>
            <th>Amount</th>
            <th>Paid</th>
            <th>Dedication</th>
            <th>Channel</th>
          </tr>
        </thead>
        <tbody>
          <%= render @contributions %>
        </tbody>
      </table>
    <div class='row my-5'>
  <div class='col-lg-12'>
    <%= paginate @contributions %>
  </div>
</div>
    </div>

  </div>
</div>