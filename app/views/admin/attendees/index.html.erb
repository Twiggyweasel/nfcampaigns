<div class='row my-2'>
  <div class='col-12'>
    <%= link_to(admin_event_path(@event), class: 'btn btn-success float-left') do %><i class="fa fa-arrow-left" aria-hidden="true"></i> Return To Event <% end %>
  </div>
</div>
<%= render 'shared/title', title: "Users attending #{@event.name}", display: 4 %>

<div class='row'>
  <div class='col-12'>
    <div class='card card-block'>
      <h2>Create Offline Registration</h2>
    </div>
  </div>
</div>  

<div class='row mt-3'>
  <div class='col-12'>
    <div class='card card-block'>
      <h2>Personal Registrations</h2>
      <table class='table mt-3'>
        <thead>
          <tr>
            <th>Attendee Name</th>
            <th>Category</th>
            <th>Fee</th>
            <th>Shirt Size</th>
            <th>Guests</th>
            <th>Paid</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <%= render @attendees.is_personal %>
        </tbody>
      </table>
    </div>
  </div>
</div>  
  
  
<div class='row mt-3'>
  <div class='col-12'>
    <div class='card card-block'>
      <h2>Corporate Registrations</h2>
      <table class='table mt-3'>
        <thead>
          <tr>
            <th>Business Name</th>
            <th>Submitting User</th>
            <th>Fee</th>
            <th>Shirt Size</th>
            <th>Guests</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <%= render @attendees.is_corporate %>
        </tbody>
      </table>
    </div>
  </div>
</div>  


