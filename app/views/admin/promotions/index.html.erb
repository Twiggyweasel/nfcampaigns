<%= render "shared/title", title: "All Promotions" %>
<div class='row'>
  <div class='col-12'>
    <div class='card card-block'>
      <h3 class='card-title'>Create a New Promotion</h3>
        <div class='promo-form'>
          <%= render "new" %>
        </div>
    </div>
  </div>
</div>

<div class='row mt-3'>
  <div class='col-12'>
    <div class='card card-block'>
      <table class="table mt-3">
        <thead>
          <tr>
            <th>Name</th>
            <th>Promotion Code</th>
            <th>Promotion Start</th>
            <th>Promotion End</th>
            <th>Discount</th>
            <th>Active</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody id='promotions'>
          <%= render @promotions %>
        </tbody>
      </table>
    </div>
  </div>
</div>
