<% title "Password Reset" %>
<div class='container pt-5'>
  <div class='col-md-6 offset-md-3 mt-3'>
    <div class='card card-rel text-center'>
      <div class='header header-primary'>
        <h3 class='py-3'>Password Reset</h3>
      </div>

      <p class='text-divide'></p>
<%= form_tag password_resets_path, :method => :post do %>
  <div class="field px-5">
    <%= label_tag :email, "Email Address" %>
    <%= text_field_tag :email, params[:email], class: 'form-control' %>
  </div>
  <div class="actions px-5"><%= submit_tag "Reset Password", class: 'btn btn-success btn-block mt-3 mb-5' %></div>
<% end %>

    </div>
    </div>
    </div>