

$('#promotion_code').hide();
$('#promo-btn').hide();
$('#promo-box').text("<%= escape_javascript(@promotion.code) %> Promo Added! <%= escape_javascript(@attendee.fee.to_s) %>"); 
$('#payment_promo_code').val('<%= escape_javascript(@promotion.code) %>');

$('#promo-block').show();
$('#promo-code-name').text("<%= escape_javascript(@promotion.code) %>");
$('#promo-percent').text("- <%= escape_javascript((@promotion.discount.round).to_s) %>%");
$('#promo-discount').text("-$<%= escape_javascript((@attendee.attendee_total * (@promotion.discount / 100)).to_s) %>0");

if($('#cover-fee').attr('checked')) {
  $('#final-total').text("$<%= escape_javascript( ((@attendee.attendee_total + @attendee.processing_fee) - (@attendee.attendee_total * (@promotion.discount / 100))).round(2).to_s ) %>")
} else {
	$('#final-total').text("$<%= escape_javascript( (@attendee.attendee_total - (@attendee.attendee_total * (@promotion.discount / 100))).to_s ) %>")
}

$.notify({
	// options
	icon: 'fa fa-check-circle-o',
	message:  "Promo successfully added"
},{
	// settings
	type: 'success',
	placement: {
		from: "top",
		align: "right"
	},
});

