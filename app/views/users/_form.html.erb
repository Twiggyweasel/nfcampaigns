<%= form_for(@user) do |f| %>

<div class='row'>
  <div class='col-md-8 col-md-2'>
    <div class='card card-block'>
      <div class="row">
        <div class="col-12">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'First Name', autofocus: true %>
        </div>
      </div>   
      <div class="row">
        <div class="col-12">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>          
        </div>
      </div>  
    </div>
  </div>
</div>

      
    <div class="input-group px-3 py-1">
      <div class="input-group-addon"><i class='fa fa-lock'></i></div>
      <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
    </div>
    <%= f.submit 'Get Started', class: 'btn btn-outline-primary mt-1 mb-2' %>

<% end %>
