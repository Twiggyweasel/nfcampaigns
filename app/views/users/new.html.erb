<% title "Register" %>
<div class='container pt-5'>
<div class='col-md-6 offset-md-3 mt-3'>
  <div class='card card-rel text-center'>
    <div class='header header-primary'>
      <h3>Register with:</h3> 
      <ul class='nav pt-1 justify-content-center'>
        <li class='nav-item'><%= link_to('auth/facebook', class: 'nav-link') do %><i class='fa fa-facebook-official fa-2x w social-icon'></i><% end %></li>
        <li class='nav-item'><%= link_to('auth/twitter', class: 'nav-link') do %><i class='fa fa-twitter fa-2x w social-icon'></i><% end %></li>
        <li class='nav-item'><%= link_to('auth/google_oauth2', class: 'nav-link') do %><i class='fa fa-google-plus fa-2x w social-icon'></i><% end %></li>
      </ul>
    </div>
    
    <p class='text-divide'>Or</p>

    <%= form_tag '/auth/identity/register' do %>
    <div class="input-group px-5 py-3">
      <div class="input-group-addon"><i class='fa fa-user'></i></div>
        <%= text_field_tag :name, nil,  class: 'form-control', placeholder: 'Full Name', autofocus: true %>
      </div>
    <div class="input-group px-5 py-3">
      <div class="input-group-addon"><i class='fa fa-envelope'></i></div>
      <%= text_field_tag :email, nil, class: 'form-control', placeholder: 'Email' %>
    </div>
    <div class="input-group px-5 py-3">
      <div class="input-group-addon"><i class='fa fa-lock'></i></div>
        <%= hidden_field_tag :role_id, 2 %>
        <%= password_field_tag :password, nil, class: 'form-control', placeholder: 'Password' %>
    </div>
    <%= submit_tag 'Get Started', class: 'btn btn-outline-primary mt-3 mb-4' %>
    

      


    </div>
  </div>
</div>
    <% if @user.errors.any? %>
      <%= render 'shared/errors', errors: @user.errors %>
    <% end %>
      <% end %>

