<div class='row my-3'>
  <div class='col-12'>
    <div class='card event-card-shadow'>
      <div class='card-block'>
        <p class='card-text blockquote'>
          <%= comment.body %>
          <br />
          <span class='blockquote-footer'>by: <%= link_to comment.user.name, user_path(comment.user) %> on <%= comment.created_at.strftime("%I:%M %p") %></span>
        </p>
      </div>
    </div>
  </div>
</div>