<%= form_for @attendee, method: :post, url: attendee_join_team_path(@attendee), remote: true, :html => { class: 'form-inline' } do |f| %>
  <%= f.select( :team_id, options_for_select(@event.teams.collect {|x| [x.name, x.id] }, f.object.team_id), {}, class: 'form-control') %>
  <%= f.submit "Join" %>

<% end %>