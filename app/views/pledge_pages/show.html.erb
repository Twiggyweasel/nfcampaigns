            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class='row mt-3'>
    <div class='col-12'>
      <div class='card event-card-shadow'>
        <div class='card-block'>
          <div class='row'>
            <div class='col-md-4'>
              <h4>Guests</h4>
              <hr />
              <table class='table'>
                <thead>
                  <tr>
                    <th colspan="2">Name</th>
                    <th>Amount Raised</th>
                  </tr>
                </thead>
                <tbody>
                <% @pledge_page.guests.each do |guest| %>
                <tr>
                  <td colspan="2"><%= guest.name %></td>
                  <td><%= number_to_currency(guest.fee) %></td>
                </tr>
                <% end %>  
                </tbody>
              </table>
            </div>
            <div class='col-md-4'>
              <h4>Team Members</h4>
              <hr />
              <% if @pledge_page.attendee.team == @pledge_page.event.teams.first %>
              <h5>*Username* has not joined a team.</h5>
              <% end %>
            </div>
            <div class='col-md-4'>
              <h4>Contributions</h4>
              <hr />
              <table class='table'>
                <thead>
                  <tr>
                    <th colspan="2">Name</th>
                    <th>Contribution</th>
                  </tr>  
                </thead>
                <tbody>
                <% @pledge_page.contributions.each do |contribution| %>
                <tr>
                  <td colspan="2">Unknown</td>
                  <td><%= number_to_currency(contribution.amount) %></td>
                </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= render 'comments/new', context: @pledge_page %>
  <div id='comments_container'>
    <%= render @pledge_page.comments %>
  </div>
</div>








