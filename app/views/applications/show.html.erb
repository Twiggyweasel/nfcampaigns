<%= render 'shared/title', title: 'Coordination Interest Details', display: 4 %>

<div class='row'>
  <div class='col-6 offset-3'>
    <div class='card'>
      <div class='card-block'>
        <div class='row mt-4 mb-2'>
          <dvi class='col-12'>
            <h4>Contact Details</h4>
          </dvi>
        </div>
        <div class='row my-2'>
          <div class='col-md-6'>
            <h6>Name:</h6> <%= @application.name %>
          </div>
          <div class='col-md-6'>
            <h6>Email:</h6> <%= @application.email %>
          </div>
        </div>
        <div class='row mt-4 mb-2'>
          <div class="col-12">
            <h4>Event Details</h4>
          </div>
        </div>
        <div class='row my-2'>
          <div class='col-md-4'>
            <h6>State:</h6> <%= @application.state %>
          </div>
          <div class='col-md-4'>
            <h6>City:</h6> <%= @application.city %>
          </div>
          <div class='col-md-4'>
            <h6>Type of Event:</h6> <%= @application.event_type %>
          </div>
        </div>
        <div class='row my-3'>
          <div class='col-12'>
            <h6>Comments:</h6> <%= @application.comments %>
          </div>
        </div>
      </div>
      <div class='card-footer'>
        <div class='row'>
          <div class='col-md-6 my-2'>
            <%= link_to "Edit Details", edit_application_path(@application), class: 'btn btn-block btn-warning' %>

          </div>
          <div class='col-md-6 my-2'>
            <%= link_to "View Events", events_path, class: 'btn btn-primary btn-block' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>