<div class='row'>
  <div class='col-md-10 offset-md-1 col-lg-6 offset-lg-3'>
    <div class='card mt-3'>
      <div class='card-block'>
        <h2 class='card-title text-center'>Contribution for <%= @contribution.backable.name %> </h2>
        
        <p class='card-text text-center'>
          Amount of Contribution: <%= number_to_currency(@contribution.amount) %>
          <br />
          In Memory/Honor of: <% if @contribution.honoree %> <%= @contribution.honoree %> <% else %> N/A <% end %>
          <div class='row'>
            <div class='col-md-4 my-1'>
              <%= link_to 'Edit', edit_contribution_path(@contribution), class: 'btn btn-warning btn-block' %>
            </div>
            <div class='col-md-4 my-1'>
              <a href='#' class='btn btn-success btn-block'>Submit Payment</a>
            </div>
            <div class='col-md-4 my-1'>
              <%= link_to 'Return to Event', event_path(@contribution.backable.id), class: 'btn btn-primary btn-block' %>
            </div>
          </div>
        </p>
      </div>  
    </div>
  </div>
</div>

