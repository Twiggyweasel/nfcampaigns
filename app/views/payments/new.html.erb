<%= render 'shared/title', title: 'New Payment' %>

<div class='row my-3'>
  <div class='col-8 offset-2'>
    <div class='card card-block'>
      <h4>Purchase Details</h4>
        ammount: <%= number_to_currency(@payable.amount) %>
        honoree: <% if @payable.honoree? %><%= @payable.honoree.titleize %> <% end %>
    </div>
  </div>

</div>
<%= form_for [@event, @payable, @payment] do |f| %>
<div class='row'>
  <% if @payment.errors.any? %>
    <%= render 'shared/errors', errors: @payment.errors %>
  <% end %> 
  <div class='col-8 offset-2'>
    <div class='card card-block'>
      <h3>Payment Details</h3>
      <div class='row my-3'>
        <div class='col-6'>
          <%= f.label :first_name, class: "control-label" %>
          <%= f.text_field :first_name, class: "form-control" %>
        </div>
        <div class='col-6'>
          <%= f.label :last_name, class: "control-label" %>
          <%= f.text_field :last_name,class: "form-control" %>          
        </div>
      </div>
      <div class="row my-3">
        <div class='col-12'>
          <%= f.label :credit_card_number, class: "control-label" %>
          <%= f.text_field :credit_card_number, class: "form-control" %>          
        </div>
      </div>
      <div class="row my-3">
        <div class='col-4'>
          <%= f.label :expiration_month, class: "control-label" %>
          <%= f.select :expiration_month, months, {}, class: "form-control" %>
        </div>  
        <div class='col-4'>
          <%= f.label :expiration_year, class: "control-label" %>
          <%= f.select :expiration_year, years, {}, class: "form-control" %>          
        </div>  
        <div class='col-4'>
          <%= f.label :card_security_code, class: "control-label" %>
          <%= f.text_field :card_security_code, class: "form-control" %>          
        </div>  
      </div>
        <div class="form-group">

        </div>
        <div class="form-group">

        </div>
        <div class="form-group">
          <%= f.hidden_field(:amount, :value => @payable.amount) %> 
        </div>
        <div class="form-group">
          <%= f.submit "Authorize Card", class: "btn btn-primary float-right" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

       
    </div>
  </div>
</div>